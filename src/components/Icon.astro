---
const { name, size, className } = Astro.props;
const { default: innerHTML } = await import(`../assets/icons/${name}.svg?raw`);

const spinner = name === 'spinner' ? 'svg {\n' +
    '                animation: spin 1s linear infinite;\n' +
    '            }\n' : '';
---

<inline-icon class={`icon icon__normal ${className || ''}`} width={size || '100%'} height={size || '100%'} style={`width: ${size ? `${size}px` : '100%'}; height: ${size ? `${size}px` : '100%'};`} role="img">
    <template shadowrootmode="open">
        <i set:html={innerHTML}/>
        <style is:inline set:html=`
            :host {
                --icon-size: ${size}px;

                display: inline-block;
                width: var(--icon-size, 24px);
                height: var(--icon-size, 24px);
            }
            i, svg {
                display: block;
                max-width: 100%;
                aspect-ratio: 1/1;
            }
            ${spinner}
            @keyframes spin {
                0% {
                    transform: rotate(0deg);
                }
                100% {
                    transform: rotate(360deg);
                }
            }
        `/>
    </template>
</inline-icon>