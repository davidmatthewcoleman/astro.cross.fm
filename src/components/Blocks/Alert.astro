---
import Blocks from "../Blocks/index.astro";
const { data: block } = Astro.props;
const { alert } = JSON.parse(block.attributes.data);
---

<div
    class="alert"
    style={`--color:${alert.color};`}
>
    <Fragment set:html={block.innerBlocks.renderedHtml} />
    {block.innerBlocks && block.innerBlocks.map((innerBlock) => (
        <Fragment set:html={innerBlock.renderedHtml} />
    ))}
</div>