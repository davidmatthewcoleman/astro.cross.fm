---

import Picture from "./Picture.astro";---

<header class="header">
    <div class="site-header">
        <div class="banner__img-mask">
            <Picture
                alt="banner"
                className={'banner__img'}
                source={[
                    {
                        media: '(max-width: 959px)',
                        url: 'https://static.crossrambles.com/images/banners/banner_002.jpg',
                        params: {
                            cover: [780, 256],
                            focus: {
                                x: 0.5,
                                y: 0.63
                            },
                            zoom: 1.5
                        }
                    },
                    {
                        media: '(min-width: 960px)',
                        url: 'https://static.crossrambles.com/images/banners/banner_002.jpg',
                        params: {
                            cover: [960, 256],
                            focus: {
                                x: 0.5,
                                y: 0.63
                            }
                        }
                    }
                ]}
            />
        </div>
        <Picture
            alt="logo"
            className={'banner__logo-img--normal'}
            source={[
                {
                    media: '(max-width: 959px)',
                    url: 'https://static.crossrambles.com/images/logos/logo_alpha.svg',
                    params: {
                        resize: [1,1]
                    }
                },
                {
                    media: '(min-width: 960px)',
                    url: 'https://static.crossrambles.com/images/logos/logo_alpha.svg',
                    params: {
                        resize: [128]
                    }
                }
            ]}
        />
    </div>
</header>
<style is:inline>
    .site-header {
        overflow: unset !important;
        margin-top: -50px;
    }
    .site-header .banner__img-mask {
        display: block;
        width: 100%;
        height: auto;
        max-height: 256px;
    }
    .site-header .banner__img-mask img.banner__img {
        display: block;
        width: 100%;
        height: auto;
        max-height: 256px;
        object-fit: cover;
    }
    .site-header .banner__logo-img--normal {
        display: block;
        position: absolute;
        inset: 50px 0 0 auto;
        width: 128px;
        margin: 0.5rem;
        aspect-ratio: 80/113;
        z-index: 3;
    }
    .site-header .banner__img-mask::before {
        content: '';
        display: block;
        position: absolute;
        inset: 50px 0 0 auto;
        width: 128px;
        margin: 0.5rem;
        aspect-ratio: 80/113;
        background-color: rgba(0,0,0,0.25);
        box-shadow: 0 2px 6px rgba(0,0,0,0.5);
        -webkit-backdrop-filter: blur(8px);
        backdrop-filter: blur(8px);
        z-index: 1;
    }
    .site-header .banner__img-mask::after {
        content: '';
        display: block;
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        background-image: -webkit-linear-gradient(to bottom, transparent 100%, #151715 100%);
        background-image: linear-gradient(to bottom, transparent 0%, #151715 100%);
        z-index: 2;
    }
    @media screen and (max-width: 959px) {
        .site-header .banner__logo-img--normal,
        .site-header .banner__img-mask::before {
            display: none !important;
        }
    }
    .site-header .hero__logo {
        position: absolute;
        inset: 50px 0 0;
        width: 100%;
        height: calc(100% - 50px);
        display: grid;
        grid-template-columns: 1fr 200px;
    }
    .site-header .hero__logo::before {
        content: '';
        display: block;
    }
    .site-header .hero__logo .hero__logo-img {
        display: block;
        padding: 16px 16px 16px 64px;
        background-image: linear-gradient(to right, transparent 0%, #151715 100%);
    }
    @media screen and (max-width: 959px) {
        .site-header {
            margin: 0 !important;
        }
        .site-header img.banner__img {
            max-height: 148px;
            object-position: center;
        }
    }
</style>